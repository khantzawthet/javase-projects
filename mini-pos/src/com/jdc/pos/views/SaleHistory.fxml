<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.cell.PropertyValueFactory?>

<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" styleClass="content-view" stylesheets="@application.css" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.jdc.pos.views.SaleHistory">
   <children>
      <HBox styleClass="search-bar">
         <children>
            <TextField fx:id="schPerson" promptText="Sale Person" />
            <DatePicker fx:id="schFrom" promptText="From" />
            <DatePicker fx:id="schTo" promptText="To" />
         </children>
      </HBox>
      <TableView fx:id="table" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
        <columns>
          	<TableColumn maxWidth="300.0" minWidth="120.0" prefWidth="-1.0" text="Sale Person" >
          		<cellValueFactory>
          			<PropertyValueFactory property="salePerson" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="300.0" minWidth="120.0" prefWidth="-1.0" text="Sale Date" >
          		<cellValueFactory>
          			<PropertyValueFactory property="saleDateStr" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="160.0" minWidth="80.0" prefWidth="-1.0" text="Sale Time" >
          		<cellValueFactory>
          			<PropertyValueFactory property="saleTimeStr" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="160.0" minWidth="80.0" prefWidth="-1.0" text="Product Count" >
          		<cellValueFactory>
          			<PropertyValueFactory property="quantity" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="160.0" minWidth="80.0" prefWidth="-1.0" text="Sub Total" >
          		<cellValueFactory>
          			<PropertyValueFactory property="subTotalStr" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="160.0" minWidth="80.0" prefWidth="-1.0" text="Tax" >
          		<cellValueFactory>
          			<PropertyValueFactory property="taxStr" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="160.0" minWidth="80.0" prefWidth="-1.0" text="Total" >
          		<cellValueFactory>
          			<PropertyValueFactory property="totalStr" />
          		</cellValueFactory>
          	</TableColumn>
            <TableColumn maxWidth="400.0" minWidth="120.0" prefWidth="-1.0" text="Remark" >
          		<cellValueFactory>
          			<PropertyValueFactory property="remarkk" />
          		</cellValueFactory>
          	</TableColumn>
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </children>
</VBox>
